@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Education.Models.Paper>
@{
    ViewBag.Title = "试卷管理";
}
<h2>@ViewBag.Title</h2>
@section css{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
@{
    var ajaxOption = new AjaxOptions()
    {
        Confirm = "您确定删除么？",
        HttpMethod = "POST",
        OnComplete = "DeleteComplete",
        //OnSuccess = "DeleteSuccess"
    };
}
<script>
    function DeleteComplete() {
        window.location.reload();
    }
    //function DeleteSuccess() {
    //    alert("DeleteSuccess!");
    //}
</script>
<p>
    @Html.ActionLink("添加新试卷", "Create")
</p>
<table class="table">
    <tr>
        <th>
            出题人姓名
        </th>
        <th>
            最近一次编辑日期
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.TrueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditOn)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                @Html.ActionLink("详细", "Details", new { id = item.Id }) |
                @Ajax.ActionLink("删除", "Delete", new { id = item.Id }, ajaxOption) |
                @Ajax.ActionLink("删除", "Delete", new { id = item.Id }, ajaxOption, new { @class = "btn btn-danger btn-sm" })
                @*@Html.ActionLink("删除", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

<div class="row">
    <div class="col-md-offset-4">
        @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
    </div>
</div>

